---
import Logo from "../assets/logo.svg";
import Stribe from "../assets/stribe.svg";
import FigLeft from "../assets/footer-figure-left.svg";
import FigRight from "../assets/footer-figure-right.svg";
---
<footer class="relative w-full bg-accent-5-100 text-primary pt-16 pb-8 overflow-hidden">
  <!-- Venstre figur -->
  <div class="absolute left-0 bottom-0">
    <FigLeft class="h-32 w-auto pointer-events-none select-none" />
  </div>

  <!-- Højre figur -->
  <div class="absolute right-0 bottom-0">
    <FigRight class="h-32 w-auto pointer-events-none select-none" />
  </div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col md:flex-row items-center md:items-start justify-between gap-8">
      
      <!-- Logo og information -->
      <div class="flex flex-col items-center md:items-start gap-4">
        <Logo class="h-12 w-auto" />
        <p class="text-sm text-center md:text-left">
          &copy; {new Date().getFullYear()} Børnebiffen. Alle rettigheder forbeholdes.
        </p>

        <!-- Footer links/tekst -->
        <ul class="text-sm text-center md:text-left mt-4 space-y-1">
          <li class="hover:underline cursor-pointer">Om Børnebiffen</li>
          <li class="hover:underline cursor-pointer">DBC DIGITAL A/S</li>
          <li class="hover:underline cursor-pointer">Tilgængelighedserklæring</li>
          <li class="hover:underline cursor-pointer">Tempovej 7-11, 2750 Ballerup</li>
          <li class="hover:underline cursor-pointer">Cookies</li>
          <li class="hover:underline cursor-pointer">Privatlivspolitik</li>
          <li class="hover:underline cursor-pointer">Kontakt os</li>
        </ul>
      </div>

      <!-- Stribe -->
      <Stribe class="h-8 w-auto" />
    </div>
  </div>
</footer>
