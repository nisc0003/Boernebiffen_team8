---
// Henter parametrene fra Astro.props
const {
  htmlheading = "h2",
  size = "medium",
  font = "display",
  weight = "bold",
  stylingclasses = "",
} = Astro.props;
const Htmlheading = htmlheading;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  xlarge: "xl:text-[4rem] lg:text-[3rem] text-[2.5rem]",
  large: "xl:text-[3rem] lg:text-[2.5rem] text-[2rem]",
  medium: "xl:text-[2.25rem] lg:text-[1.875rem] text-[1.5rem]",
  small: "xl:text-[1.5rem] lg:text-[1.375rem] text-[1.25rem]",
  xsmall: "xl:text-[1.25rem] lg:text-[1.125rem] text-[1rem]",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {
  display: "font-display",
  sans: "font-sans",
};
//Definer den weight (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const weightClasses = {
  ExtraBold: "font-extrabold",
  bold: "font-bold",
  medium: "font-medium",
  normal: "font-regular",
};
---

<Htmlheading
  class:list={[
    stylingclasses,
    sizeClasses[size],
    fontClasses[font],
    weightClasses[weight],
  ]}><slot /></Htmlheading
>
